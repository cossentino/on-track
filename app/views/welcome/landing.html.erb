<%= flash[:alert] if flash[:alert] %>

<h1>Welcome. Please Sign up or Login </h1>


<%= form_for @user, url: '/login' do |f| %>
  <%= f.label :email%>
  <%= f.text_field :email %><br><br>
  <%= f.label :password %>
  <%= f.password_field :password %> <br><br>
  <%= f.submit "Log In" %>
<% end %>

<p><%= link_to 'Sign in with Google', '/auth/google_oauth2' %>.</p>
<p><%= link_to 'Sign Up', '/users/signup' %>.</p>

