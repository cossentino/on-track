


<%= form_for purchase, url: url do |f| %>
  <%= f.label "Store/Place of Purchase:" %>
  <%= f.text_field :place %>
  <%= f.label "Date:" %>
  <%= f.date_field :place %>
  <%= f.label "Total:" %>
  <%= f.text_field :total %>
  <%= f.label "Category:" %>
  <%= f.collection_select :category_id, Category.all, :id, :name %><br>
  <%= f.label "Note:" %>
  <%= f.text_area :note %>
  <%= f.submit "Submit" %>
<% end %>

